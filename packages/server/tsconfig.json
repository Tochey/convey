{
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "allowJs": true,
    "checkJs": true,
    "outDir": "build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
  }
}
